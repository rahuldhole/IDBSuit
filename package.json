{
  "name": "idbsuit",
  "description": "IndexedDB Suit for handling migrations and data models",
  "version": "0.0.2",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "docs": "typedoc",
    "docs-serve": "http-server ./docs.idbsuit.org -p 3000 -a 0.0.0.0",
    "lint": "tsc",
    "release": "pnpm run build && changeset publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rahuldhole/idbsuit.git"
  },
  "keywords": [
    "indexeddb",
    "database",
    "offline first",
    "PWA"
  ],
  "author": "Rahul Dhole <https://github.com/rahuldhole>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/rahuldhole/idbsuit/issues"
  },
  "homepage": "https://github.com/rahuldhole/idbsuit#readme",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "http-server": "^14.1.1",
    "tsup": "^8.0.2",
    "typedoc": "^0.25.13",
    "typedoc-material-theme": "^1.0.2",
    "typescript": "^5.4.5"
  }
}
